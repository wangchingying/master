<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cyw.firebaseauthapp.BasicDataMaintain">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="帳號(手機號碼)"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/pwdid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView3"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/mdName"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/pwdid"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="請輸入姓名"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/mdstore"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/mdName"
        android:layout_below="@+id/mdName"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="請輸入分店"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/mdbankcode"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/mdstore"
        android:layout_below="@+id/mdstore"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="請輸入銀行代碼"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/mdbankaccount"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/mdbankcode"
        android:layout_below="@+id/mdbankcode"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="請輸入銀行帳號"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/pwdsubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/mdbankaccount"
        android:layout_below="@+id/mdbankaccount"
        android:layout_marginTop="31dp"
        android:text="修改" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/mdName"
        android:layout_alignBottom="@+id/mdName"
        android:layout_alignStart="@+id/pwdid"
        android:text="姓名"
        android:textAlignment="viewEnd"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/mdstore"
        android:layout_alignBottom="@+id/mdstore"
        android:layout_alignStart="@+id/textView5"
        android:text="分店"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/mdbankcode"
        android:layout_alignBottom="@+id/mdbankcode"
        android:layout_alignStart="@+id/textView6"
        android:text="銀行代碼"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/mdbankaccount"
        android:layout_alignBottom="@+id/mdbankaccount"
        android:layout_alignStart="@+id/textView7"
        android:text="銀行帳號"
        android:textSize="18sp" />
</RelativeLayout>
